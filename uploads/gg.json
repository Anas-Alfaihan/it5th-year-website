* {
    margin: 0px;
    padding: 0px;
    outline: none;
    border: none;
    text-decoration: none;
    box-sizing: border-box;
    list-style: none;
}
body {
    min-height: 100vh;
    background-color: rgba(247, 248, 252, 1);
}
ul {
    padding: 0;
}
nav {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 90px;
    height: 100%;
    background: rgba(54, 55, 64, 1);
    opacity: 1;
    overflow: hidden;
    z-index: 999;
    transition: width 0.2s linear;
    box-shadow: 0 20px 35px rgba(0, 0, 0, 0.1);
    color: rgb(211, 214, 230);
}
.logo {
    text-align: center;
    display: flex;
    transition: all 0.5s ease;
    align-items: center;
}
.n-i {
    position: relative;
    top: 12px;
    margin-right: 10px;
}
.logo img {
    width: 70px;
    height: 70px;
    border-radius: 50%;
}
.logo span {
    font-weight: bold;
    font-size: 18px;
    padding-right: 15px;
    top: 0;
}
a {
    position: relative;
    color: rgb(211, 214, 230);
    font-size: 14px;
    display: table;
    width: 300px;
    padding: 10px;
    text-decoration: none;
}
.fa-solid,
.fa-light {
    position: relative;
    width: 70px;
    height: 40px;
    top: 14px;
    font-size: 20;
    text-align: center;
}
a:hover {
    background: rgba(255, 255, 255, 1);
}
nav:hover {
    width: 280px;
    transition: all 0.5s ease;
}
nav:hover + main {
    padding-right: 290px;
    transition: all 0.5s ease;
}

main {
    position: absolute;
    top: 0;
    right: 0;
    padding-right: 100px;
    width: 100%;
    height: 100vh;
    background: rgba(247, 248, 252, 1);
    opacity: 1;
    overflow: hidden;
    transition: all 0.2s linear;
}

.sec {
    height: 500px;
    background: rgba(255, 255, 255, 1);
    margin: 40px;
    border: 1px solid rgba(223, 224, 235, 1);
    border-radius: 8px;
}
